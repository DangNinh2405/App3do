<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_3x"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="13dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_bold"
            android:text="Thay đổi mật khẩu"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_bg_body_white"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ecommerce_2x" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etxt_old_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_etxt_register"
                android:fontFamily="@font/roboto_regular"
                android:hint="Mật khẩu cũ"
                android:inputType="textPassword"
                android:paddingLeft="24dp"
                android:textColor="@color/darkBlue"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img_old_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/hide_eye" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etxt_new_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_etxt_register"
                android:fontFamily="@font/roboto_regular"
                android:hint="Mật khẩu mới"
                android:inputType="textPassword"
                android:paddingLeft="24dp"
                android:textColor="@color/darkBlue"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img_new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/hide_eye" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etxt_confirm_new_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_etxt_register"
                android:fontFamily="@font/roboto_regular"
                android:hint="Xác nhận mật khẩu mới"
                android:inputType="textPassword"
                android:paddingLeft="24dp"
                android:textColor="@color/darkBlue"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img_confirm_new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/hide_eye" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_update_password"
            android:layout_marginTop="56dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_login"
            android:fontFamily="@font/roboto_medium"
            android:text="Cập nhật mật khẩu"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>