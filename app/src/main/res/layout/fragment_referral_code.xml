<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_3x"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="13dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_bold"
            android:text="Thay đổi mã giới thiệu"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_bg_body_white"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:layout_marginTop="40dp"
            android:id="@+id/etxt_referral_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_etxt_register"
            android:fontFamily="@font/roboto_regular"
            android:hint="nhập mã giới thiệu mới"
            android:paddingLeft="24dp"
            android:textColor="@color/darkBlue"
            android:textColorHint="@color/grey"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_update_referral_code"
            android:layout_marginTop="56dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_login"
            android:fontFamily="@font/roboto_medium"
            android:text="Cập nhật mã giới thiệu"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>