<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu khi item không được chọn -->
    <item android:color="@color/grey" android:state_checked="false" />
    <!-- Màu khi item được chọn -->
    <item android:color="@color/orange" android:state_checked="true" />
    <!-- Màu khi item có focus -->
    <item android:color="@color/orange" android:state_focused="true" />
</selector>